<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MenuApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/menu_orange</item>
        <item name="colorPrimaryVariant">@color/menu_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/menu_orange_50</item>
        <item name="colorSecondaryVariant">@color/menu_orange_50</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/circularstd</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/menu_orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textColorHint">@color/black_20</item>
        <item name="boxStrokeColor">@color/activation_indicator_colour</item>
        <item name="hintTextAppearance">@style/HintStyle</item>
    </style>

    <style name="HintStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/hint_size</item>
    </style>

    <style name="TextEditStyle" parent="">
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="HeadlineStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headline_size</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textColor">@color/black_80</item>
    </style>
</resources>